 <link rel="stylesheet" href="/stylesheets/loginstyle.css" type="text/css" media="all">
  
             
<section class="main vh-100">

        
        <div class="content-w3ls loginUser">
            <div class="text-center icon">
              <h1 style="color: white; font-weight: 500;">smart<span style="color: rgb(216, 74, 9);">C</span>art</h1>
              <h3 style="color: white">Admin</h3>
            </div>

            <div class="content-bottom">
                 <form action="/admin/adminlogin" method="post" id="loginpage">
                    <div class="field-group">
                        <span class="fa fa-user" aria-hidden="true"></span>
                        <div class="wthree-field">
                            <input name="email" class="loginUserInput" id="text1" type="email" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="field-group mb-2">
                        <span class="fa fa-lock" aria-hidden="true"></span>
                        <div class="wthree-field">
                            <input name="pword" class="loginUserInput" id="myInput" type="Password" placeholder="Password" required>
                        </div>
                    </div>
                    {{#if loginerr}}
                    <div style="text-align: center;">
                    <p class="text-danger">Invalid email or password</p>
                    </div>
                    {{/if}}
                    <div class="wthree-field mt-3">
                        <button type="submit" class="btn loginUserInput">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </section>