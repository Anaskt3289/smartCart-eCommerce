<div class="page-inner">
    <div class="page-title">
        <h3>Edit Banners</h3>
        <div class="page-breadcrumb">
            <ol class="breadcrumb">
                <li><a href="/admindashboard">Home</a></li>
                <li><a href="#">Edit banners</a></li>
            </ol>
        </div>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title" style="font-size:large;">{{banner.banner}}</h4>
                    </div>
                    <div class="panel-body">
                       
                       
    <form action="/admin/updatebanners" method="post" enctype="multipart/form-data">
<div class="row">
    <div class="COL-12 col-md-12 col-lg-6 mb-5">
    <img src="/banners/{{banner.banner}}.jpg" alt="" height="280px" width="400px" id="bannerpic"><br>
     <label for="profilepic" style="cursor: pointer; font-size: large;">Change Picture...</label>
                <input type="file" class="ml-5 mb-5 " id="profilepic" name="bannerpic" 
                onchange="viewImage1(event)"  accept="image/*">

    </div>
     <div class="COL-12 col-md-12 col-lg-6" >
    <input type="text" class="form-control" name="banner"  value='{{banner.banner}}' hidden >
    <input type="text" name="bannerId" value={{banner._id}} hidden>
    <label for="desciption1" style="font-size: 16px;">Description 1</label>
   <input type="text" class="form-control" name="description1" id="description1" value='{{banner.description1}}' style="font-size: 15px;">
    <label for="desciption2" class="mt-4" style="font-size: 16px;">Description 2</label>
   <input type="text" class="form-control" name="description2" id="description2" value='{{banner.description2}}' style="font-size: 15px;">
    <label for="buttonurl" class="mt-4" style="font-size: 16px;" >Edit Button Name</label>
    <input type="text" name="btnname" class=" form-control bg-primary text-white" value='{{banner.btnname}}' id="bannerbtnedit" style="text-align: center; font-size: 15px;">     
     <label for="buttonurl" class="mt-4" style="font-size: 16px;">Button url</label>
    
     <select class="form-select form-control" name="btnurl" aria-label="Default select example" style="font-size: 16px;height: 40px;">
        
     <option value="/showallproducts?category=Allproducts" style="font-size: 16px;">All products</option>
     <option value="/showallproducts?category=Mobiles" style="font-size: 16px;">Mobiles</option>
     <option value="/showallproducts?category=Laptops" style="font-size: 16px;">Laptops</option>
     <option value="/showallproducts?category=Television" style="font-size: 16px;">Televisions</option>
     <option value="/showallproducts?category=Cameras" style="font-size: 16px;">Cameras</option>
     <option value="/showallproducts?category=Accessories" style="font-size: 16px;">Accessories</option>
     </select>

   <button type="submit" class="btn btn-success mt-5 pt-2" style="float: right; width: 100px; height: 40px;text-align: center; font-size: 16px;">Update</button>
    </div>
</div>
    </form>

                    </div>
                </div>
            </div>

        </div><!-- Row -->
    </div><!-- Main Wrapper -->
    <div class="page-footer">
        <p class="no-s">2015 &copy; Modern by Steelcoders.</p>
    </div>


    <script>
    function viewImage1(event) {
        document.getElementById('bannerpic').src = URL.createObjectURL(event.target.files[0])
        
    }

</script>




