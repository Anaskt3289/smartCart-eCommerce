<div class="page-inner">
    <div class="page-title">
        <h3>{{vendorname}}</h3>
        <div class="page-breadcrumb">
            <ol class="breadcrumb">
                <li><a href="/vendordashboard">{{vendorname}}</a></li>
                <li><a href="#">Profile</a></li>
            </ol>
        </div>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                   
                    <div class="panel-body">



<section>
    <div class="container-fluid">
        <div class="bg-white shadow rounded-lg d-block d-sm-flex">
            <div class="row">
                
                <div class="col-md-12 col-lg-9">
                    <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                        
                        <div  id="password" role="tabpanel" aria-labelledby="password-tab">
                                   
                                   
                     <form action="/vendor/changepassword" method="post" id="changepassword">
                            <h2 class="mb-4">Password Setting</h2>
                            <div class="row">
                                <div class="col-md-12 mt-5">
                                    
                                        <label style="font-size: 16px;">Old password</label>
                                        <input type="password" name="oldpword" class="form-control" id="change-pword-input">
                                        {{#if pwordNoMatch}}
                                        <p class="mt-1">The old password doesn't match! Try again.. </p>
                                        {{/if}}
                                   
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mt-5">
                                   
                                        <label style="font-size: 16px;">New password</label>
                                        <input type="password" name="newpword" class="form-control" id="newpsword">
                                   
                                </div>
                                <div class="col-md-12 mt-5">
                                   
                                        <label style="font-size: 16px;">Confirm new password</label>
                                        <input type="password" name="newrepeatpword" class="form-control" id="change-pword-input">
                                    
                                </div>
                            </div>
                            <div class="mt-5">
                                <button type="submit" class="btn btn-primary" style="font-size: 16px;">Update</button>
                                <a href="/vendor/vendorprofile"  class="btn btn-light" style="font-size: 16px;">Cancel</a>
                            </div>
                            </form>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





