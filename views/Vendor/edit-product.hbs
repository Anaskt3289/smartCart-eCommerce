
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


<form class="mt-3" action="/vendor/updateproduct/{{product._id}}" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <h2 class="fw-bold mb-2 text-uppercase">EDIT Product</h2>
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Product</label>
                    <input type="text" class="form-control" name="product" value={{product.product}}>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Category</label>
                    <select class="form-control" id="inputGroupSelect01" name="category">
                        <option>{{product.category}}</option>
                        <option>Mobiles</option>
                        <option>Laptops</option>
                        <option>Cameras</option>
                        <option>Television</option>
                        <option>Accessories</option>
                        <option>Gaming Consoles</option>
                    </select>
                </div>
               
            </div>

            <div class="row">
                 <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Brand</label>
                    <input type="text" class="form-control" name="brand" value={{product.brand}}>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Quantity</label>
                    <input type="number" class="form-control" name="quantity" value={{product.quantity}}>
                </div>
                
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Price</label>
                    <input type="text" class="form-control" name="price" value={{product.price}}>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Stock details</label>
                    <select class="custom-select form-control" id="inputGroupSelect01" name="stock">
                         <option>{{product.stock}}</option>
                        <option>In stock</option>
                        <option>Out of stock</option>
                        
                    </select>
                </div>
               
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Description</label>
                    <textarea  name="description" rows="3" class="form-control">{{product.description}}</textarea>
                </div>
                 <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Company Id</label>
                    <input type="text" class="form-control" name="companyid" value={{product.companyid}} readonly>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <label class="form-label mt-2">Specifications</label>
                    <textarea  name="specs" rows="3" class="form-control">{{product.specs}}</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col form-group mt-5">
                    <div>
                        <label for="exampleFormControlFile1">Image 1</label>
                    </div>
                    <div>
                         <img src="/product-images/{{product._id}}1.jpg" alt="" height="70px" width="70px" class="mt-2 mb-2" id="imagePreview1"><br>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="productimage1" onchange="viewImage1(event)">
                    </div>
                </div>
                 <div class="col form-group mt-5">
                    <div>
                        <label for="exampleFormControlFile1">Image 2</label>
                    </div>
                    <div>
                         <img src="/product-images/{{product._id}}2.jpg" alt="" height="70px" width="70px" class="mt-2 mb-2" id="imagePreview2"><br>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="productimage2" onchange="viewImage2(event)">
                    </div>
                </div>
                </div>
                 <div class="row">
                 <div class="col form-group mt-5">
                    <div>
                        <label for="exampleFormControlFile1">Image 3</label>
                    </div>
                    <div>
                         <img src="/product-images/{{product._id}}3.jpg" alt="" height="70px" width="70px" class="mt-2 mb-2" id="imagePreview3"><br>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="productimage3" onchange="viewImage4(event)">
                    </div>
                </div>
                 <div class="col form-group mt-5">
                    <div>
                        <label for="exampleFormControlFile1">Image 4</label>
                    </div>
                    <div>
                         <img src="/product-images/{{product._id}}4.jpg" alt="" height="70px" width="70px" class="mt-2 mb-2" id="imagePreview4"><br>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="productimage4" onchange="viewImage4(event)">
                    </div>
                </div>
            </div>
            <div>
                <button class="btn btn-outline-success btn-lg px-5 mt-4" type="submit">Update Product</button>
            </div>

        </div>
    </div>
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script>
        function viewImage1(event){
            document.getElementById('imagePreview1').src=URL.createObjectURL(event.target.files[0])
             
        }
         function viewImage2(event){
            document.getElementById('imagePreview2').src=URL.createObjectURL(event.target.files[0])
            
        }
         function viewImage3(event){
            document.getElementById('imagePreview3').src=URL.createObjectURL(event.target.files[0])
            
        }
         function viewImage4(event){
            document.getElementById('imagePreview4').src=URL.createObjectURL(event.target.files[0])
           
        }

</script>