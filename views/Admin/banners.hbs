<div class="page-inner">
  <div class="page-title">
    <h3>Edit Banners</h3>
    <div class="page-breadcrumb">
      <ol class="breadcrumb">
        <li><a href="/admin">Home</a></li>
        <li><a href="#">Edit banners</a></li>
      </ol>
    </div>
  </div>
  <div id="main-wrapper">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-white">
          <div class="panel-heading clearfix">
            <h4 class="panel-title" style="font-size:large;">Sliders & Banners</h4>
          </div>
          <div class="panel-body">




            <div class="container-fluid">
              <div class="row mt-5" style="text-align: center;">
                {{#each banners}}
                <div class="col-12 col-md-12 col-lg-4">
                  <div class="card mt-3">
                    <img class="card-img-top" src="/banners/{{this.banner}}.jpg" alt="Card image cap" height="230px">
                    <div class="card-body">
                      <h5 class="card-title" style="font-size: x-large;">{{this.banner}}</h5>
                      <p class="card-text mt-3" style="font-size: large;"> {{this.description1}} <br>
                        {{this.description2}} </p>
                      <a href="/admin/editbanners?id={{this._id}}" class="btn btn-primary mt-3"
                        style="font-size: large;">Edit</a>
                    </div>
                  </div>
                </div>






                {{/each}}
              </div>
            </div>




          </div>
        </div>
      </div>

    </div><!-- Row -->
  </div><!-- Main Wrapper -->
  <div class="page-footer">
    <p class="no-s">2015 &copy; Modern by Steelcoders.</p>
  </div>