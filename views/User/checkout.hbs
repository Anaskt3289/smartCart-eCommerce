<form class="bg0 p-t-75 p-b-85" action="" method="post" id="checkout-form">
	<div class="container mt-5">
		<div class="row">
			<div class="col-sm-10 col-lg-10  col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="checkoutbox pb-4">
						<div class="delivery-add pt-3 pl-3">
							<h5>Delivery Address</h5>
						</div>
						{{#each address}}
						<div style="display: flex;">
							<input type="radio" name="address" id="{{this.address}}" value="{{this.address}}"
								style=" -webkit-appearance: radio;" class="mt-3 ml-4" required>
							<label class="ml-3 mt-3" for="{{this.address}}"
								style=" max-width:400px; word-wrap:break-word;">{{this.address}}</label>
						</div>
						{{/each}}

						<input type="text" name="user" value={{userId}} hidden>

						<button type="button" class="btn btn-primary ml-4 mt-3" data-toggle="modal"
							data-target="#exampleModalCenter">
							Add address
						</button>



						<div class="delivery-add pt-3 pl-3 mt-5">
							<h5>Payment methods</h5>
						</div>
						<div style="display: flex;">
							<input type="radio" name="paymentmethod" id="cod" value="COD"
								style=" -webkit-appearance: radio;" class="mt-4 ml-4" required>
							<label class="ml-3 mt-2" for="cod"><img src="/images/cashonDelivery.png" height="40px" width="135px" alt=""></label>
						</div>
						<div style="display: flex;">
							<input type="radio" name="paymentmethod" id="razorpay" value="razorpay"
								style=" -webkit-appearance: radio;" class="mt-4 ml-4" required>
							<label class="ml-3 mt-3" for="razorpay"><img src="/images/razorpay.png" height="25px" width="130px" alt=""></label>
						</div>
						<div style="display: flex;">
							<input type="radio" name="paymentmethod" id="paypal" value="paypal"
								style=" -webkit-appearance: radio;" class="mt-4 ml-4" required>
							<label class="ml-3 mt-3" for="paypal"><img src="/images/paypal.png" height="30px" width="120px" alt=""></label>
						</div>
					</div>


				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						Cart Totals
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">
						<div class="size-208">
							<span class="stext-110 cl2">
								Subtotal:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								<span style="font-family: Source Serif 4;">₹ </span><span id="total">{{subtotal}}</span>
							</span>
						</div>
					</div>


					<div class="flex-w flex-t bor12 p-b-13 mt-3">
						<div class="size-208">
							<span class="stext-110 cl2">
								Shipping:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								<span style="font-family: Source Serif 4;">₹ </span> 80
							</span>
						</div>
					</div>

					<div class="flex-w flex-t bor12 p-b-13 mt-3">
						<div class="size-208">
							<span class="stext-110 cl2">
								Discount:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								<span style="font-family: Source Serif 4;">₹ </span>00
							</span>
						</div>
					</div>




					<div class="flex-w flex-t p-t-27 p-b-33">
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2">
								<span style="font-family: Source Serif 4;">₹ </span><span
									id="grandtotal">{{total}}</span>
								<input type="text" name="total" value={{total}} hidden>
							</span>
						</div>
					</div>

					<button type="submit"
						class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer text-white">
						Place Order
					</button>
				</div>
			</div>
		</div>
	</div>
</form>









<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
	aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Add address</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form action="/addAddress" method="post" id="addAddress">
				<div class="modal-body">
					<textarea name="address" id="" cols="45" rows="3" placeholder="Enter your address"
						style=" border: solid 0.5px rgba(160, 141, 141, 0.356);" required minlength="10"></textarea>
					<input type="text" name="pin" class="mt-3 numbers" placeholder="PIN Number"
						style=" border: solid 0.5px rgba(160, 141, 141, 0.356); height: 30px;" pattern=".{4,6}" required title="4 to 6 digits">
					<input type="text" name="mobile" class="mt-3 numbers" placeholder="Contact Number"
						style=" border: solid 0.5px rgba(160, 141, 141, 0.356); height: 30px;" pattern=".{10,10}" required title="10 digits"> 
				</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary">Add address</button>
			</div>
			</form>
		</div>
	</div>
	

	
	<script>
	$('.numbers').keyup(function () {
		this.value = this.value.replace(/[^0-9\.]/g, '');
	});
</script>
</div>


