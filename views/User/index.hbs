<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
	<div class="container">
		<div class="p-b-10 mb-3">
			<h3 class="ltext-103 cl5">
				Selected For You
			</h3>
		</div>


		<div class="row isotope-grid">
			{{#each products}}
			<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
				<!-- Block2 -->
				<div class="block2">


					<div class="block2-pic hov-img0">
						<a href="/productdetails?id={{{this._id}}}">
							<img src="/product-images/{{this._id}}1.jpg" alt="IMG-PRODUCT">
						</a>
						{{#if this.loggined}}
						<button type="button" onclick="addToCart('{{this._id}}',1)"
							class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 "
							 data-toggle="modal" data-target="#exampleModalCenter">
							Add to Cart
						</button>

						<!-- Modal -->
						<div class="modal fade mt-5 pt-3" id="exampleModalCenter" tabindex="-1" role="dialog"
							aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
							<div class="modal-dialog mt-5" role="document" style="float: right;">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalCenterTitle">Item added to
											cart</h5>
									</div>

								</div>
							</div>
						</div>



						{{else}}
						<a href="/login"
							class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
							Add to Cart
						</a>
						{{/if}}
					</div>
					<div class="block2-txt flex-w flex-t p-t-14">
						<div class="block2-txt-child1 flex-col-l ">
							<a href="/productdetails?id={{{this._id}}}"
								class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
								{{this.product}}
							</a>

							{{#if this.discountDetails}}
							<span class="stext-105 cl3">
								<span style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">₹
								</span>{{this.discountDetails.currentprice}}
							</span>
							<span class="stext-105 cl3">
								<div style="display: flex;">
									<strike><span
											style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">₹
										</span>{{this.price}}</strike>
									<p class="ml-4 text-success"> {{this.discountDetails.discount}}% Off</p>
								</div>
							</span>
							{{else}}
							<span class="stext-105 cl3">
								<span style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">₹
								</span>{{this.price}}
							</span>
							{{/if}}
						</div>
						<div class="block2-txt-child2 flex-r p-t-3">
							{{#if this.loggined}}
							{{#if this.wishlist}}

							<button class="btn-addwish-b2 dis-block pos-relative"
								onclick="removefromWishlist('{{this._id}}')">

								<img class="icon-heart1 dis-block trans-04" id="wishlisticon1{{this._id}}"
									src="images/icons/icon-heart-02.png" alt="ICON">
								<img class="icon-heart2 dis-block trans-04 ab-t-l" id="wishlisticon2{{this._id}}"
									src="images/icons/icon-heart-01.png" alt="ICON">
							</button>

							{{else}}
							<button class="btn-addwish-b2 dis-block pos-relative"
								onclick="addtoWishlist('{{this._id}}')">
								<img class="icon-heart1 dis-block trans-04" id="wishlisticon1{{this._id}}"
									src="images/icons/icon-heart-01.png" alt="ICON">
								<img class="icon-heart2 dis-block trans-04 ab-t-l" id="wishlisticon2{{this._id}}"
									src="images/icons/icon-heart-02.png" alt="ICON">
							</button>
							{{/if}}

							{{else}}
							<a href="/login" class="btn-addwish-b2 dis-block pos-relative">
								<img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png"
									alt="ICON">
								<img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png"
									alt="ICON">
							</a>
							{{/if}}

						</div>


					</div>
				</div>
			</div>

			{{/each}}
		</div>

		<!-- Load more -->
		<div class="flex-c-m flex-w w-full p-t-45">
			<a href="/paginateUserHome" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
				Load More
			</a>
		</div>
	</div>
</section>