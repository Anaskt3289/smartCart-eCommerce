<script>
	function changeproductquantity(count) {
		count = parseInt(count)
		let quantity = parseInt(document.getElementById('productquantity').value)
		if (quantity > 1) {
			document.getElementById('productquantity').value = quantity + count
		} else if (quantity == 1 && count == 1) {
			document.getElementById('productquantity').value = quantity + count
		}

	}

</script>