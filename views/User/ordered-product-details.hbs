<div class="container mb-5 pb-5 p-5 myorder" style="border: solid 0.5px rgba(160, 141, 141, 0.356); margin-top: 100px;">
     <div class="row">
          <div class="col-md-12 col-lg-6" style="display: flex;">
               <div>
                    <img src="/product-images/{{product._id}}1.jpg" alt="" height="200px" width="200px">
               </div>
               <div class="ml-5">
                    <h5>{{product.product}}</h5>
                    <p class="mt-3"><b>{{product.price}}</b></p>

                    {{#each order}}
                    <h5 class="mt-4">Deliveryaddress:</h5>
                    <p>{{this.deliveryaddress}}</p>
               </div>
          </div>
          <div class="col-md-12 col-lg-6">
               <div>
                    <div class="row ml-3">
                         <div class="col-6">
                              <h5>Order id</h5>
                         </div>
                         <div class="col-6">
                              <h5>{{this._id}}</h5>
                         </div>
                    </div>

                    <div class="row ml-3 mt-3">
                         <div class="col-6">
                              <h5>Products Ordered</h5>
                         </div>
                         <div class="col-6">
                              {{#each product}}
                              <h5>
                                   {{this.product}}
                              </h5>
                              {{/each}}

                         </div>

                    </div>

                    <div class="row ml-3 mt-3">

                         <div class="col-6">
                              <h5>Ordered On</h5>
                         </div>
                         <div class="col-6">
                              <h5>{{this.date}}</h5>
                         </div>
                    </div>

                    <div class="row ml-3 mt-3">
                         <div class="col-6">
                              <h5>Product Price</h5>
                         </div>
                         {{/each}}

                         <div class="col-6">

                              <h5><span
                                        style="font-family:  'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">₹
                                   </span>{{product.price}}</h5>

                         </div>

                    </div>

                    {{#each order}}


                    <div class="row ml-3 mt-3">

                         <div class="col-6">
                              <h5>Total Amount Paid</h5>
                         </div>
                         <div class="col-6">
                              <h5><span
                                        style="font-family:  'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">₹
                                   </span>{{this.total}}</h5>
                         </div>
                    </div>


                    <div class="row ml-3 mt-3">
                         <div class="col-6">
                              <h5>Payment Method</h5>
                         </div>
                         <div class="col-6">
                              <h5>{{this.paymentmethod}}</h5>
                         </div>
                    </div>

               </div>



