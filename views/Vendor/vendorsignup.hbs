<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">

            <h3 class="text-dark">Welcome to smartCart</h3>



        </div>
        <div class="col-md-9 register-right">
            <form action="/vendor/vendorsignup" method="post" enctype="multipart/form-data" id="vendorsignup">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Register your company</h3>
                        <div class="row register-form">
                            <div class="col-12 col-lg-6">
                                <div class="form-group mt-4">
                                    <input type="text" class="form-control" name="vname" placeholder="Company Name *"
                                        value="" />
                                </div>
                                <div class="form-group mt-4">
                                    <input type="password" class="form-control" name="pword" placeholder="Password *"
                                        value="" id="psword" />
                                </div>
                                <div class="form-group mt-4">
                                    <input type="password" class="form-control" name="repeatpword"
                                        placeholder="Confirm Password *" value="" />
                                </div>
                                <label for="license" class="mt-4">Upload your company license:</label><br>
                                <img src="" alt="" height="70px" width="70px" class="mt-2 mb-2" id="imagePreview1"
                                    style="display: none;"><br>

                                <input type="file" id="license" name="license" onchange="viewImage1(event)"
                                    accept="image/*">


                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mt-4">
                                    <input type="email" name="email" class="form-control" placeholder="Your Email *"
                                        value="" />
                                </div>
                                <div class="form-group mt-4">
                                    <input type="text" name="mobile" minlength="10" maxlength="10" class="form-control numbers"
                                        placeholder="Your Phone *" value="" />
                                </div>
                                <div class="form-group mt-4">
                                    <textarea placeholder="Enter Address Here.." name="address" rows="3"
                                        class="form-control"></textarea>
                                </div>
                                <input type="submit" class="btnRegister" value="Register" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<script>
    function viewImage1(event) {
        document.getElementById('imagePreview1').src = URL.createObjectURL(event.target.files[0])
        document.getElementById('imagePreview1').style.display = 'block'
    }

</script>
<script>
    $('.numbers').keyup(function () {
        this.value = this.value.replace(/[^0-9\.]/g, '');
    });
</script>