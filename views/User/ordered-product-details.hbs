<div class="container mb-5 pb-5 p-5" style="border: solid 0.5px rgba(160, 141, 141, 0.356); margin-top: 100px;">
     <div class="row">
          <div class="col-12 col-lg-6" style="display: flex;">
               <div>
               <img src="/product-images/{{product._id}}1.jpg" alt="" height="200px" width="200px">
               </div>
               <div class="ml-5">
               <h5>{{product.product}}</h5>
               <p class="mt-3"><b>{{product.price}}</b></p>
               {{#each order}}
               <h5 class="mt-4">Deliveryaddress:</h5>
               <p>{{this.deliveryaddress}}</p>
               </div>
          </div>
          <div class="col-12 col-lg-6" style="display: flex;">
               <div class="mr-5">
                    <h5>Order id</h5>
                    <h5 class="mt-3">Products Ordered</h5>
                    <h5 class="mt-3">Ordered On</h5>
                    <h5 class="mt-3">Total Amount Paid</h5>
                    <h5 class="mt-3">Payment Method</h5>


               </div>
               <div class="ml-5">
                    <h5>{{this._id}}</h5>
                    <h5 class="mt-3">
                         {{#each product}}
                         <span>{{this.product}}</span>
                         {{/each}}
                         
                    </h5>
                    <h5 class="mt-3">{{this.date}}</h5>
                    <h5 class="mt-3"><span style="font-family: Source Serif 4;">â‚¹ </span>{{this.total}}</h5>
                    <h5 class="mt-3">{{this.paymentmethod}}</h5>
               </div>
          </div>
     </div>
     <div class="row mt-5" >
          <div class="col-12" style="display: flex;">
               <div>
                    <img src="images/orderplaced.png" alt="" height="30px" width="30px" >
               
               <p>Order Placed {{ placed}}</p>
               {{!-- {{/if}} --}}

               </div>

               <div class=" mr-3" style="width: 150px; color: black;">
                    <hr>
               </div>

                <div>
                    <img src="images/outfordelivery.png" alt="" height="30px" width="30px">
               {{#if shipped}}
                    <p>Out for delivery</p>
               {{/if}}
               </div>


               <div class="mr-3" style="width: 150px; color: black;">
                    <hr>
               </div>

                <div>
                    <img src="images/delivered.png" alt="" height="30px" width="30px">
               {{#if delivered}}
                    <p>Delivered</p>
               {{/if}}
               </div>
          </div>
     </div>
     {{/each}}
     </div>
